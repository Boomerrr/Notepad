       android:textSize="30sp"
       android:textColor="@android:color/white"
       android:textStyle="bold"
       android:gravity="center"
       android:text="微"
       android:layout_width="match_parent"
       android:layout_height="40sp" />
   <TextView
       android:textSize="30sp"
       android:textColor="@android:color/white"
       android:textStyle="bold"
       android:gravity="center"
       android:text="记"
       android:layout_width="match_parent"
       android:layout_height="40sp" />
   <TextView
       android:textSize="30sp"
       android:textColor="@android:color/white"
       android:textStyle="bold"
       android:gravity="center"
       android:text="事"
       android:layout_width="match_parent"
       android:layout_height="40sp" />
</LinearLayout>